# =============================================================================
# Smart MCP Server - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# Priority: .env values take precedence over config.yaml
# =============================================================================

# -----------------------------------------------------------------------------
# Server Mode
# -----------------------------------------------------------------------------
# Options: "database" or "api"
MODE=api

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
# Your LLM API key (required)
LLM_API_KEY=your-api-key-here

# Custom API base URL (for OpenAI-compatible APIs)
LLM_API_BASE=https://api.openai.com/v1

# Model to use
LLM_MODEL=gpt-3.5-turbo

# Temperature (0.0 - 1.0)
LLM_TEMPERATURE=0.7

# Max tokens for response
LLM_MAX_TOKENS=1000

# -----------------------------------------------------------------------------
# Database Configuration (when MODE=database)
# -----------------------------------------------------------------------------
# Database connection string
# Examples:
#   SQLite:     sqlite:///path/to/database.db
#   PostgreSQL: postgresql://user:password@localhost:5432/dbname
#   MySQL:      mysql+pymysql://user:password@localhost:3306/dbname
DATABASE_URL=sqlite:///example.db

# Maximum rows to return per query
DATABASE_MAX_ROWS=1000

# -----------------------------------------------------------------------------
# API Configuration (when MODE=api)
# -----------------------------------------------------------------------------
# URL or local path to OpenAPI/Swagger spec (JSON or YAML)
API_SPEC_URL=https://api.example.com/openapi.json

# Allow non-GET requests (POST, PUT, DELETE)
# WARNING: Setting this to true allows the LLM to modify data!
API_UNSAFE_MODE=false

# -----------------------------------------------------------------------------
# Safety Configuration
# -----------------------------------------------------------------------------
# Restrict to read-only operations (database mode)
SAFETY_READ_ONLY=true

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Hide database details from responses (recommended for production)
SECURITY_HIDE_DATABASE_DETAILS=false

# Expose generated SQL in responses
SECURITY_EXPOSE_SQL=true

# Expose column names in responses
SECURITY_EXPOSE_COLUMN_NAMES=true

# Expose table names in responses
SECURITY_EXPOSE_TABLE_NAMES=true

# Log detailed error messages (disable in production)
SECURITY_LOG_DETAILED_ERRORS=true
